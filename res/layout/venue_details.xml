<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/MainTabLayout">
	
	<ScrollView
		style="@style/ScrollView">

		<RelativeLayout
			style="@style/ScrollableContainerLayout">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:orientation="vertical"
	    		android:paddingBottom="20dp">
	
				<TextView 
					style="@style/Text" 
					android:id="@+id/venue_name" />
			
			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_address_one"
			    	android:visibility="gone" />
			        
			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_address_two"
			    	android:visibility="gone" />

			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_city_state_zip"
			    	android:visibility="gone" />
			    	
			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_phone"
			    	android:visibility="gone" />
			    	
			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_email"
			    	android:visibility="gone" />

			    <TextView 
			    	style="@style/Text"
			    	android:id="@+id/venue_web_site"
			    	android:visibility="gone" />

			</LinearLayout>
			    		
    		<ListView
    			style="@style/MenuListView"
    			android:layout_alignParentBottom="true"
    			android:id="@+id/venue_details_menu"
    			android:entries="@array/venue_options_array" />

		</RelativeLayout>
		
	</ScrollView>
	
</FrameLayout>